{
	"manifest_version": 2,
	"default_locale": "ja",
	"name":"__MSG_extensionName__",
	"description":"__MSG_extensionDescription__",
	"author": "Ryosuke Ohta",
	"version":"1.0.0",
	"icons": {
		"128": "image/icon128.jpg",
		"64": "image/icon64.jpg",
		"48": "image/icon48.jpg",
		"16": "image/icon16.jpg"
	},
	"background": {
		"page": "lib/background/background.html"
	},
	"options_ui": {
		"page": "lib/option/option.html",
		"open_in_tab": true,
		"browser_style": false
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"lib/content/content.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"128": "image/icon128.jpg",
			"64": "image/icon64.jpg",
			"48": "image/icon48.jpg",
			"16": "image/icon16.jpg"
		},
		"default_title": "__MSG_extensionName__"
	},
	"sidebar_action": {
		"default_title": "__MSG_extensionName__",
		"default_panel": "lib/comment/comment.html",
		"default_icon": {
			"128": "image/icon128.jpg",
			"64": "image/icon64.jpg",
			"48": "image/icon48.jpg",
			"16": "image/icon16.jpg"
		},
		"browser_style": false
	},
	"permissions": [
		"<all_urls>",
		"tabs"
	],
	"applications": {
		"gecko": {
			"strict_min_version": "60.0"
		}
	}
}
